@model SubmenuAddModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Submenu" asp-action="Update" class="form-control" method="post">
    <div class="form-group">
        <input type="hidden" placeholder="Regular" asp-for="Submenu.Id" class="form-control form-control-alternative" />
    </div>
    <div class="form-group">
        <label asp-for="Submenu.MenuId"></label>
        <input placeholder="Regular" type="number" asp-for="Submenu.MenuId" class="form-control form-control-alternative"/>
    </div>
    <div class="form-group">
        <label asp-for="Submenu.MenuText"></label>
        <input class="form-control" type="text" asp-for="Submenu.MenuText">
    </div>
    <div class="form-group">
        <label asp-for="Submenu.Date"></label>
        <input class="form-control" type="date" asp-for="Submenu.Date">
    </div>
    <div class="form-group">
        <label for="example-text-input" asp-for="Submenu.Status" class="form-control-label">Proje Başlangıç Durumu</label>
        <div class="form-check mb-3">
            <input class="form-check-input" value="true" type="radio" asp-for="Submenu.Status">
            <label class="custom-control-label" asp-for="Submenu.Status" for="customRadio1"> True</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" value="false" asp-for="Submenu.Status">
            <label class="custom-control-label" asp-for="Submenu.Status" for="customRadio2">False</label>
        </div>
    </div>
    <input type="submit" value="Güncelle" class="btn bg-gradient-secondary" />

</form>
