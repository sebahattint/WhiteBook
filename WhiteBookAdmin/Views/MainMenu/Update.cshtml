@model MainMenuAddModel 
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-controller="MainMenu" asp-action="Update" class="form-control" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="MainMenu.Id" class="form-control form-control-alternative"/>
    </div>
    <div class="form-group">
        <label asp-for="MainMenu.ProjectId"></label>
        <input type="text"  asp-for="MainMenu.ProjectId" class="form-control form-control-alternative"  />
    </div>
    <div class="form-group">
        <label asp-for="MainMenu.Menu"></label>
        <input class="form-control" type="text" asp-for="MainMenu.Menu">
    </div>
    <div class="form-group">
        <label asp-for="MainMenu.Date"></label>
        <input class="form-control" type="date" asp-for="MainMenu.Date">
    </div>
    <div class="form-group">
        <label for="example-text-input" asp-for="MainMenu.Status" class="form-control-label">Proje Başlangıç Durumu</label>
        <div class="form-check mb-3">
            <input class="form-check-input" value="true" type="radio" asp-for="MainMenu.Status">
            <label class="custom-control-label" asp-for="MainMenu.Status" for="customRadio1"> True</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" value="false" asp-for="MainMenu.Status">
            <label class="custom-control-label" asp-for="MainMenu.Status" for="customRadio2">False</label>
        </div>
    </div>
    <input type="submit" value="Güncelle" class="btn bg-gradient-secondary" />

</form>

